
@{
    ViewBag.Title = "OrdersReport";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Orders Report</h2>

<style>
    .table {
        padding: 40px;
    }
</style>

<div style="height:60px"></div>

<div style="padding-left:40px; padding-right:40px">
    <table class="table table-bordered table-responsive table-hover">
        <tr class="table">
            <th>OrderId </th>
            <th>Date </th>
            <th>Total Items</th>
            <th>Status</th>
            <th>View Details</th>
        </tr>
        @foreach (Order f in ViewBag.listProduct)
        {
            <tr>
                <td>@f.OrderId</td>
                <td>@f.Date</td>
                <td>@f.Items</td>
                <td>@f.Status</td>


                <td align="center">@Html.ActionLink("Details", "DetailsOrder", "Admin", new { id = f.OrderId }, null)</td>
            </tr>
        }


    </table>
</div>
<div style="height:60px"></div>
