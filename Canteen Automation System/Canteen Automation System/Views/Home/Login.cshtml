
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .writings{
        padding-top:50px;
        padding-left:50px;
        padding-right:50px;
    }
    .textbox{
        align-self:center;
        padding:40px;
    }
    .modal{
        margin-top:7%;
    }
        
    .modal-content {
    position: relative;
    background-color: white;
    margin: auto;
    padding: 0;
    border: 1px solid #888;
    width: 80%;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
    -webkit-animation-name: animatetop;
    -webkit-animation-duration: 0.4s;
    animation-name: animatetop;
    animation-duration: 0.4s
}

/* The Close Button */
.close {
    color: white;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
}

.modal-header {
    padding: 2px 16px;
    background-color: white;
    color: black;
}

.modal-body {padding: 2px 16px;}

    .modal-footer {
        padding: 2px 16px;
        background-color: white;
        color: black;
    }
</style>

<h2 class="writings">Login</h2>
<div class="textbox">

    <input type="text" class="form-control" placeholder="User Name">
    <div style="height:20px"></div>

    <input type="password" class="form-control" placeholder="Password">
    <div style="height:20px"></div>

    <button type="button" style="float:right;padding-right:30px"  class="btn btn-light" onclick="window.location='/Chef/Index'">LOGIN</button>
    <div style="padding-right:20px"></div>
    <button id="myBtn" class="btn btn-light">SIGN UP</button>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
      <h2>SignUp</h2>
    </div>
    <div class="modal-body">
        <style>
            .writings {
                padding-top: 50px;
                padding-left: 50px;
                padding-right: 50px;
            }

            .textbox {
                align-self: center;
                padding: 40px;
            }
        </style>
        <div class="textbox">

            <input type="text" class="form-control" placeholder="User Name">
            <div style="height:20px"></div>

            <input type="password" class="form-control" placeholder="Password">
            <div style="height:20px"></div>

            <input type="password" class="form-control" placeholder="Confirm Password">
            <div style="height:20px"></div>

            <select class="form-control" id="sel1">
                <option>Register As</option>
                <option>CHEF</option>
                <option>ADMIN</option>
            </select>
            <div style="height:20px"></div>

            <button type="button" style="float:right;padding-right:30px" class="btn btn-light">SIGNUP</button>
            <div style="padding-right:20px"></div>
        </div>

    </div>
  </div>

</div>

<script>
// Get the modal
var modal = document.getElementById('myModal');

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
</div>
